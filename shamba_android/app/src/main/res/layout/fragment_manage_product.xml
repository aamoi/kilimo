<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.shamba.amoi.shambaapp.fragments.inventory.ManageProductFragment">

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:id="@+id/main_layout"
                  android:layout_marginLeft="@dimen/text_marginLeft"
                  android:layout_marginTop="@dimen/text_marginTop"
                  android:orientation="vertical">

    <LinearLayout android:id="@+id/layout_product_details"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

        <TextView android:id="@+id/title_product_name"
                  android:layout_width="150dp"
                  android:layout_height="@dimen/form_buttons_height"
                  android:text="Product Name:"
                  android:textStyle="bold"/>

            <TextView android:id="@+id/product_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/text_marginLeft"
                      android:hint="product name" />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/form_element_spacing"
                      android:orientation="horizontal">
            <TextView android:id="@+id/title_product_vendor"
                      android:layout_width="150dp"
                      android:layout_height="@dimen/form_buttons_height"
                      android:text="Manufacturer:"
                      android:textStyle="bold"/>

            <TextView android:id="@+id/product_vendor"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/text_marginLeft"
                      android:hint="product manufacturer" />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/form_element_spacing"
                      android:orientation="horizontal">
            <TextView android:id="@+id/title_package_size"
                      android:layout_width="150dp"
                      android:layout_height="@dimen/form_buttons_height"
                      android:text="Package Size: "
                      android:textStyle="bold"/>

            <TextView android:id="@+id/package_size"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/text_marginLeft"
                      android:hint="product size" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_restock_product"
                android:layout_marginLeft="-180dp"
                android:text="Restock Product"
                android:background="@color/transparent"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_unstock_product"
                android:layout_marginLeft="-180dp"
                android:text="Unstock Product"
                android:background="@color/transparent"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit_product"
                android:layout_marginLeft="-210dp"
                android:text="Edit Product"
                android:background="@color/transparent"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit_delete"
                android:layout_marginLeft="-195dp"
                android:text="Delete Product"
                android:background="@color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
