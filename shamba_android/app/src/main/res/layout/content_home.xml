    <Button
        android:id="@+id/btn_inventory"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClickInventory"
        android:text="Inventory"
        android:layout_toRightOf="@id/btn_projects"
        android:layout_alignParentTop="@id/btn_projects"
        android:layout_alignBottom="@id/btn_projects"
        android:layout_alignTop="@id/btn_projects"
        android:layout_marginStart="70dp"
        />
    <Button
        android:id="@+id/btn_labor"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClickLabor"
        android:text="Labor"
        android:layout_below="@id/btn_projects"
        android:layout_marginStart="@dimen/text_marginLeft"
        />
    <Button
        android:id="@+id/btn_power"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClickPowerButton"
        android:text="Power"
        android:layout_toRightOf="@id/btn_labor"
        android:layout_below="@id/btn_inventory"
        android:layout_alignLeft="@id/btn_inventory"
        />
    <Button
        android:id="@+id/btn_assets"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClickAssets"
        android:text="Assets"
        android:layout_below="@id/btn_labor"
        android:layout_marginLeft="@dimen/text_marginLeft"
        />
    <Button
        android:id="@+id/btn_reports"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClickReports"
        android:text="Reports"
        android:layout_below="@id/btn_power"
        android:layout_toRightOf="@id/btn_assets"
        android:layout_alignLeft="@id/btn_power"
        />

</RelativeLayout>
