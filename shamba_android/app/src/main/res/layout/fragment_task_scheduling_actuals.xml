        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_task_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Task name: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_task_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Enter task name" />
        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:fillViewport="true"
            tools:context="com.shamba.amoi.shambaapp.fragments.projects.TaskSchedulingFragment">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Start date to execute the task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_planned_startDate"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Planned Start Date: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_planned_startDate"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="exp. start date"
                            android:inputType="date" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_actual_startDate"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Actual start Date: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_actual_startDate"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Actual start date" />
                    </LinearLayout>

                </LinearLayout>

                <!--End date to execute the task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_planned_endDate"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Planned End Date: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_planned_endDate"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="exp. end date" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_actual_endDate"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Actual end Date: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_actual_endDate"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Actual end date" />
                    </LinearLayout>

                </LinearLayout>

                <!--Number of days required to execute the task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_planned_days"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Planned Days: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_planned_days"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_actual_days"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Actual Days: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_actual_days"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                </LinearLayout>

                <!--Number of people to execute the task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_planned_people"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Planned people: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_planned_people"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="0"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_actual_people"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Actual people: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_actual_people"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Actual people" />
                    </LinearLayout>

                </LinearLayout>

                <!--Cost to execute the task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_planned_cost"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Planned cost: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_planned_cost"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="exp. cost"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_actual_cost"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Actual cost: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_actual_cost"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Actual cost"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                </LinearLayout>

                <!--Revenue expected from the task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_planned_revenue"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Planned revenue: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_planned_revenue"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="Est. revenue"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_actual_revenue"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Actual revenue: "
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_actual_revenue"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Actual revenue"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                </LinearLayout>

                <!--Required assets for performing task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_required_assets"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Required assets: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_required_assets"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Required asssets here!"
                        android:inputType="text" />
                </LinearLayout>

                <!--Required products for performing task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_required_products"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Required products: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_required_products"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Required products here!"
                        android:inputType="text" />
                </LinearLayout>

                <!--Details for performing task.-->
                <LinearLayout
                    android:id="@+id/schedule_parameter_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_task_details"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Task details: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_details"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Task details here!"
                        android:inputType="text" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel_inventory_creation"
                android:layout_width="@dimen/form_buttons_width"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@color/flat_grey"
                android:text="Cancel" />

            <Button
                android:id="@+id/btn_submit_task"
                android:layout_width="@dimen/form_buttons_width"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/flat_green"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

