<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.shamba.amoi.shambaapp.fragments.inventory.UnstockProductFragment">
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/text_marginTop"
                  android:layout_marginLeft="@dimen/text_marginLeft"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/txt_quantity"
                  android:text="Unstock Quantity" android:textStyle="bold"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/edit_quantity"
                  android:inputType="numberDecimal"
                  android:hint="0.00"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/text_margin"
                  android:id="@+id/txt_description"
                  android:text="Purchase Description" android:textStyle="bold"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/edit_description"
                  android:inputType="text"
                  android:hint="Enter Reasons/Comments/ Date"/>

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="100dp"
                      android:orientation="horizontal"
        >

            <Button android:layout_height="wrap_content"
                    android:layout_width="@dimen/form_buttons_width"
                    android:id="@+id/btn_cancel_unstocking"
                    android:text="Cancel"
                    android:background="@color/flat_grey"
            />

            <Button android:layout_height="wrap_content"
                    android:layout_width="@dimen/form_buttons_width"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btn_submit_unstock"
                    android:text="Submit"
                    android:background="@color/flat_green"
            />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
