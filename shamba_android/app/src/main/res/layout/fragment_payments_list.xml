<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
android:layout_width="wrap_content"
xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.RecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_list_salary_payments"
    android:name="com.shamba.amoi.shambaapp.fragments.labor.SalaryPaymentsFragment"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@+id/main_layout"
    app:layoutManager="LinearLayoutManager"
    tools:context="com.shamba.amoi.shambaapp.fragments.labor.PaymentsFragment"
    tools:listitem="@layout/fragment_payments"/>

<Button android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/btn_add_payment"
    android:text="Add payment"
    android:background="@color/flat_green"
    android:layout_alignParentBottom="true"/>
</RelativeLayout>



